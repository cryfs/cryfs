-----END PGP PUBLIC KEY BLOCK-----
KEYEND
}

case "$1" in
    configure)
        install_key
        add_repository
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument '$1'" >&2
        exit 1
    ;;
esac

set +e

exit 0
